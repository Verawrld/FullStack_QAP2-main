<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/styles2.css" />
  </head>
  <body>
    <div class="leaderboard-container">
      <h1>Leaderboard</h1>
      <% if (leaderboard.length === 0) { %>
      <p>There are no streaks at this time.</p>
      <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Rank</th>
            <th>Score</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% leaderboard.forEach((entry, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= entry.score %></td>
            <td><%= entry.date %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
      <form action="/" method="GET" class="menu-form">
        <button type="submit">Return to Menu</button>
      </form>
    </div>
  </body>
</html>
