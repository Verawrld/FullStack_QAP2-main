<!-- The header ejs template is included to ensure our CSS and fonts are loaded -->

<link rel="stylesheet" href="/styles2.css" />

<div class="quiz-container">
  <h1>Math Quiz</h1>
  <p>Answer the question below:</p>

  <% if (result) { %>
  <p class="result"><strong><%= result %></strong></p>
  <% } %>

  <p class="question"><strong><%= question %></strong></p>

  <p class="streak">Current Streak: <strong><%= streak %></strong></p>

  <form action="/quiz" method="POST" class="quiz-form">
    <input type="hidden" name="question" value="<%= question %>" />
    <input type="hidden" name="streak" value="<%= streak %>" />
    <label for="answer">Your Answer:</label>
    <input type="text" id="answer" name="answer" required />
    <button type="submit">Submit</button>
  </form>

  <form action="/" method="GET" class="menu-form">
    <button type="submit">Return to Menu</button>
  </form>
</div>
